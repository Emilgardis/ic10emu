{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es2021",
    "allowJs": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": [
      "@types/wicg-file-system-access",
      "@types/ace"
    ],
    "plugins": [
      {
        "name": "ts-lit-plugin"
      },
      {
        "name": "typescript-lit-html-plugin"
      }
    ]
  },
  "include": [
    "node_modules/lit-scss-loader/types.d.ts"
  ]
}
